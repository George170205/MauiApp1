<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.RegistroPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F9FAFB">
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Colores -->
            <Color x:Key="GreenPrimary">#10B981</Color>
            <Color x:Key="GreenDark">#059669</Color>
            <Color x:Key="TextPrimary">#000000</Color>
            <Color x:Key="TextTitle">#1967D2</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="White">#FFFFFF</Color>
            <Color x:Key="ErrorRed">#EF4444</Color>

            <!-- Shadow -->
            <Shadow x:Key="CardShadow"
                    Brush="Black"
                    Offset="0,8"
                    Radius="20"
                    Opacity="0.15"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0" BackgroundColor="White">

            <!-- Card principal con fondo blanco -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="30"
                    Shadow="{StaticResource CardShadow}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="20">

                    <!-- BotÃ³n Volver -->
                    <HorizontalStackLayout Spacing="8" Margin="0,0,0,10">
                        <Border WidthRequest="35"
                                HeightRequest="35"
                                StrokeThickness="0"
                                BackgroundColor="#F3F4F6"
                                HorizontalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnVolverClicked"/>
                            </Border.GestureRecognizers>
                            <Label Text="â†"
                                   FontSize="20"
                                   TextColor="{StaticResource TextPrimary}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Volver al inicio"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Logo/Icono -->
                    <Border WidthRequest="100"
                            HeightRequest="100"
                            StrokeThickness="0"
                            HorizontalOptions="Center"
                            Margin="0,0,0,10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#1967d2"
                                    Offset="0,4"
                                    Radius="12"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1967d2" Offset="0.0"/>
                                <GradientStop Color="#1557B0" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Label Text="ðŸ‘¤"
                               FontSize="50"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <!-- TÃ­tulo -->
                    <VerticalStackLayout Spacing="8" Margin="0,0,0,15">
                        <Label Text="Crear Cuenta"
                               FontFamily="InterExtraBold"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextTitle}"
                               HorizontalOptions="Center"/>
                        <Label Text="Completa tus datos para registrarte"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Selector de Rol -->
                    <Border Padding="15,12"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Selecciona tu rol *"
                                   FontSize="14"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontAttributes="Bold"/>
                            <Picker x:Name="rolPicker"
                                    Title="Seleccionar rol"
                                    FontSize="14"
                                    TextColor="{StaticResource TextPrimary}">
                                <Picker.Items>
                                    <x:String>Alumno</x:String>
                                    <x:String>Docente</x:String>
                                    <x:String>Admin</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Campo Email -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Correo ElectrÃ³nico *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"/>
                        <Border x:Name="emailBorder"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="White">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Entry x:Name="emailEntry"
                                   Placeholder="ejemplo@correo.com"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="15"
                                   Keyboard="Email"
                                   TextChanged="OnEmailTextChanged"
                                   BackgroundColor="Transparent"/>
                        </Border>
                        <Label x:Name="emailErrorLabel"
                               Text=""
                               FontSize="12"
                               TextColor="{StaticResource ErrorRed}"
                               IsVisible="False"/>
                    </VerticalStackLayout>

                    <!-- Campos Nombre y Apellido en Grid -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <!-- Campo Nombre -->
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="Nombre *"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Border StrokeThickness="1"
                                    Stroke="#E5E7EB"
                                    BackgroundColor="White">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Entry x:Name="nombreEntry"
                                       Placeholder="Tu nombre"
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="{StaticResource TextPrimary}"
                                       FontSize="15"
                                       BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Campo Apellido -->
                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Label Text="Apellido *"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Border StrokeThickness="1"
                                    Stroke="#E5E7EB"
                                    BackgroundColor="White">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Entry x:Name="apellidoEntry"
                                       Placeholder="Tu apellido"
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="{StaticResource TextPrimary}"
                                       FontSize="15"
                                       BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Campo TelÃ©fono (Opcional) -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="TelÃ©fono (opcional)"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"/>
                        <Border StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="White">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Entry x:Name="telefonoEntry"
                                   Placeholder="10 dÃ­gitos"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="15"
                                   Keyboard="Telephone"
                                   MaxLength="10"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Campo ContraseÃ±a -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="ContraseÃ±a *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"/>
                        <Border x:Name="passwordBorder"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="White">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Entry x:Name="passwordEntry"
                                   Placeholder="MÃ­nimo 6 caracteres"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="15"
                                   IsPassword="True"
                                   TextChanged="OnPasswordTextChanged"
                                   BackgroundColor="Transparent"/>
                        </Border>
                        <Label x:Name="passwordErrorLabel"
                               Text=""
                               FontSize="12"
                               TextColor="{StaticResource ErrorRed}"
                               IsVisible="False"/>
                    </VerticalStackLayout>

                    <!-- Campo Confirmar ContraseÃ±a -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Confirmar ContraseÃ±a *"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"/>
                        <Border x:Name="confirmarPasswordBorder"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="White">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Entry x:Name="confirmarPasswordEntry"
                                   Placeholder="Repite tu contraseÃ±a"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="15"
                                   IsPassword="True"
                                   TextChanged="OnConfirmarPasswordTextChanged"
                                   BackgroundColor="Transparent"/>
                        </Border>
                        <Label x:Name="confirmarPasswordErrorLabel"
                               Text=""
                               FontSize="12"
                               TextColor="{StaticResource ErrorRed}"
                               IsVisible="False"/>
                    </VerticalStackLayout>

                    <!-- TÃ©rminos y Condiciones -->
                    <HorizontalStackLayout Spacing="8">
                        <CheckBox x:Name="terminosCheckBox"
                                  Color="#1967D2"/>
                        <Label TextColor="{StaticResource TextSecondary}"
                               FontSize="12"
                               VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Acepto los "/>
                                    <Span Text="TÃ©rminos y Condiciones"
                                          TextColor="{StaticResource TextTitle}"
                                          FontAttributes="Bold"/>
                                </FormattedString>
                            </Label.FormattedText>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnTerminosClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                    <!-- BotÃ³n Registrarse -->
                    <Border HeightRequest="50"
                            StrokeThickness="0"
                            Margin="0,10,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#1967D2"
                                    Offset="0,4"
                                    Radius="12"
                                    Opacity="0.3"/>
                        </Border.Shadow>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1967D2" Offset="0.0"/>
                                <GradientStop Color="#1557B0" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button x:Name="registrarButton"
                                Text="Crear Cuenta"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                CornerRadius="12"
                                Clicked="OnRegistrarClicked"/>
                    </Border>

                    <!-- Link a Login -->
                    <HorizontalStackLayout Spacing="5"
                                         HorizontalOptions="Center"
                                         Margin="0,15,0,0">
                        <Label Text="Â¿Ya tienes cuenta?"
                               FontSize="13"
                               TextColor="{StaticResource TextSecondary}"/>
                        <Label Text="Iniciar SesiÃ³n"
                               FontSize="13"
                               TextColor="{StaticResource TextTitle}"
                               FontAttributes="Bold">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnIniciarSesionClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>