<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.LoginPage"
			 NavigationPage.HasNavigationBar="False"
			 BackgroundColor="#F9FAFB">
	<ContentPage.Resources>
		<ResourceDictionary>
			<!-- Colores -->
			<Color x:Key="GreenPrimary">#10B981</Color>
			<Color x:Key="GreenDark">#059669</Color>
			<Color x:Key="TextPrimary">#000000</Color>
			<Color x:Key="TextTitle">#1967D2</Color>
			<Color x:Key="TextSecondary">#6B7280</Color>
			<Color x:Key="White">#FFFFFF</Color>

			<!-- Shadow -->
			<Shadow x:Key="CardShadow"
                    Brush="Black"
                    Offset="0,8"
                    Radius="20"
                    Opacity="0.15"/>
		</ResourceDictionary>
	</ContentPage.Resources>
	<ScrollView>
		<VerticalStackLayout Padding="0" Spacing="0" BackgroundColor="White">


			<!-- Card principal con fondo blanco -->
			<Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="30"
                    Shadow="{StaticResource CardShadow}">
				<Border.StrokeShape>
					<RoundRectangle CornerRadius="30"/>
				</Border.StrokeShape>

				<VerticalStackLayout Spacing="25">

					<Border WidthRequest="100"
						HeightRequest="100"
						StrokeThickness="0"
						HorizontalOptions="Center"
						Margin="0,10,0,0">

						<Border.StrokeShape>
							<RoundRectangle CornerRadius="25"/>
						</Border.StrokeShape>

						<Border.Shadow>
							<Shadow Brush="#1967d2"
									Offset="0,4"
									Radius="12"
									Opacity="0.3"/>
						</Border.Shadow>

										<Border.Background>
											<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
												<GradientStop Color="#1967d2" Offset="0.0"/>
												<GradientStop Color="#1557B0" Offset="0.5"/>
											</LinearGradientBrush>
										</Border.Background>

										<Label Text=""
											   FontSize="50"
											   HorizontalOptions="Center"
											   VerticalOptions="Center"/>
									</Border>
					
					<!-- TÃ­tulo Bienvenido -->
					<VerticalStackLayout Spacing="8" Margin="0,10,0,0">
						<Label Text="Link"
							   FontFamily="InterExtraBold"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextTitle}"
                               HorizontalOptions="Center"/>
						<Label Text="Sistema de Control Escolar"
                               FontSize="15"
                               TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="Center"/>
						<Label Text="Inicia sesiÃ³n para continuar"
                               FontSize="13"
                               TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="Center"/>
					</VerticalStackLayout>

					<!-- Selector de Rol -->
					<Border Padding="15,12"
							StrokeThickness="1"
							Stroke="#E5E7EB"
							BackgroundColor="White"
							Margin="0,15,0,0">
						<Border.StrokeShape>
							<RoundRectangle CornerRadius="12"/>
						</Border.StrokeShape>

						<VerticalStackLayout Spacing="8">
							<Label Text="Selecciona tu rol"
								   FontSize="14"
								   TextColor="{StaticResource TextPrimary}"
								   FontAttributes="Bold"/>

							<Picker x:Name="rolPicker"
									Title="Seleccionar rol"
									FontSize="14"
									TextColor="{StaticResource TextPrimary}"
									SelectedIndexChanged="OnRolSelected">
								<Picker.Items>
									<x:String> Alumno</x:String>
									<x:String> Docente</x:String>
									<x:String> Admin</x:String>
								</Picker.Items>
							</Picker>
						</VerticalStackLayout>
					</Border>
					<!-- Campo Usuario/MatrÃ­cula -->
					<VerticalStackLayout Spacing="8">
						<Label Text="Usuario o MatrÃ­cula"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"/>
						<Border StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="White">
							<Border.StrokeShape>
								<RoundRectangle CornerRadius="10"/>
							</Border.StrokeShape>
							<Entry x:Name="usuarioEntry"
                                   Placeholder="Ingresa tu usuario"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="15"
                                   BackgroundColor="Transparent"/>
						</Border>
					</VerticalStackLayout>

					<!-- Campo ContraseÃ±a -->
					<VerticalStackLayout Spacing="8">
						<Label Text="ContraseÃ±a"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"/>
						<Border StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="White">
							<Border.StrokeShape>
								<RoundRectangle CornerRadius="10"/>
							</Border.StrokeShape>
							<Entry x:Name="passwordEntry"
                                   Placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="15"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"/>
						</Border>
					</VerticalStackLayout>

					<!-- Recordar sesiÃ³n -->
					<HorizontalStackLayout Spacing="8">
						<CheckBox x:Name="recordarCheckBox"
                                  Color="#1967D2"/>
						<Label Text="Recordar mi sesiÃ³n"
                               FontSize="13"
                               TextColor="{StaticResource TextSecondary}"
                               VerticalOptions="Center"/>
					</HorizontalStackLayout>

					<!-- BotÃ³n Iniciar SesiÃ³n -->
					<Border HeightRequest="50"
        StrokeThickness="0">

						<!-- Bordes redondeados -->
						<Border.StrokeShape>
							<RoundRectangle CornerRadius="12"/>
						</Border.StrokeShape>

						<!-- Sombra -->
						<Border.Shadow>
							<Shadow Brush="#1967D2"
									Offset="0,4"
									Radius="12"
									Opacity="0.3"/>
						</Border.Shadow>

						<!-- Fondo degradado -->
						<Border.Background>
							<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
								<GradientStop Color="#1967D2" Offset="0.0"/>
								<GradientStop Color="#1557B0" Offset="0.5"/>
							</LinearGradientBrush>
						</Border.Background>

						<!-- BotÃ³n funcional -->
						<Button Text="Iniciar SesiÃ³n"
								FontSize="16"
								FontAttributes="Bold"
								TextColor="White"
								BackgroundColor="Transparent"
								CornerRadius="12"
								Clicked="OnIniciarSesionClicked"/>
						
						
					</Border>

					<!-- Link a Registro -->
					<HorizontalStackLayout Spacing="5"
										 HorizontalOptions="Center"
										 Margin="0,20,0,0">
						<Label Text="Â¿No tienes cuenta?"
							   FontSize="13"
							   TextColor="{StaticResource TextSecondary}"/>
						<Label Text="RegÃ­strate aquÃ­"
							   FontSize="13"
							   TextColor="{StaticResource TextTitle}"
							   FontAttributes="Bold">
							<Label.GestureRecognizers>
								<TapGestureRecognizer Tapped="OnRegistroClicked"/>
							</Label.GestureRecognizers>
						</Label>
					</HorizontalStackLayout>


					<!-- Enlaces inferiores -->
					<Grid ColumnDefinitions="*,*"
                          ColumnSpacing="20"
                          Margin="0,10,0,0">
						<VerticalStackLayout Grid.Column="0"
                                           Spacing="5"
                                           HorizontalOptions="Center">
							<Border WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    BackgroundColor="#1967D21A"
                                    HorizontalOptions="Center">
								<Border.StrokeShape>
									<RoundRectangle CornerRadius="20"/>
								</Border.StrokeShape>
								<Border.GestureRecognizers>
									<TapGestureRecognizer Tapped="OnAyudaClicked"/>
								</Border.GestureRecognizers>
								<Label Text="â“"
                                       FontSize="20"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
							</Border>
							<Label Text="Ayuda"
                                   FontSize="11"
                                   TextColor="{StaticResource TextSecondary}"
                                   HorizontalOptions="Center"/>
						</VerticalStackLayout>

						<VerticalStackLayout Grid.Column="1"
                                           Spacing="5"
                                           HorizontalOptions="Center">
							<Border WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    BackgroundColor="#34A8531A"
                                    HorizontalOptions="Center">
								<Border.StrokeShape>
									<RoundRectangle CornerRadius="20"/>
								</Border.StrokeShape>
								<Border.GestureRecognizers>
									<TapGestureRecognizer Tapped="OnIdiomaClicked"/>
								</Border.GestureRecognizers>
								<Label Text="ðŸŒ"
                                       FontSize="20"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
							</Border>
							<Label Text="Idioma"
                                   FontSize="11"
                                   TextColor="{StaticResource TextSecondary}"
                                   HorizontalOptions="Center"/>
						</VerticalStackLayout>
					</Grid>

				</VerticalStackLayout>
			</Border>


		</VerticalStackLayout>
	</ScrollView>
</ContentPage>