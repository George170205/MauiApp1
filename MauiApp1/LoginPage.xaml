                                Padding="15,12"
                                StrokeThickness="2"
                                Stroke="#10B981"
                                BackgroundColor="#ECFDF5">
							<Border.StrokeShape>
								<RoundRectangle CornerRadius="12"/>
							</Border.StrokeShape>
							<Border.GestureRecognizers>
								<TapGestureRecognizer Tapped="OnAlumnoSelected"/>
							</Border.GestureRecognizers>
							<VerticalStackLayout Spacing="5">
