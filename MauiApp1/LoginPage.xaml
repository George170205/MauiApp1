                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource TextPrimary}"
                                       HorizontalOptions="Center"/>
							</VerticalStackLayout>
						</Border>

						<!-- Admin -->
						<Border Grid.Column="2"
                                x:Name="adminButton"
                                Padding="15,12"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="White">
							<Border.StrokeShape>
								<RoundRectangle CornerRadius="12"/>
							</Border.StrokeShape>
							<Border.GestureRecognizers>
								<TapGestureRecognizer Tapped="OnAdminSelected"/>
							</Border.GestureRecognizers>
							<VerticalStackLayout Spacing="5">
