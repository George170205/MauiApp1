					<!-- Enlaces inferiores -->
					<Grid ColumnDefinitions="*,*"
                          ColumnSpacing="20"
                          Margin="0,10,0,0">
						<VerticalStackLayout Grid.Column="0"
                                           Spacing="5"
                                           HorizontalOptions="Center">
							<Border WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    BackgroundColor="#3B82F6"
                                    HorizontalOptions="Center">
								<Border.StrokeShape>
									<RoundRectangle CornerRadius="20"/>
								</Border.StrokeShape>
								<Border.GestureRecognizers>
									<TapGestureRecognizer Tapped="OnAyudaClicked"/>
								</Border.GestureRecognizers>
								<Label Text="â“"
