                                       HorizontalOptions="Center"/>
								<Label Text="Alumno"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource TextPrimary}"
                                       HorizontalOptions="Center"/>
							</VerticalStackLayout>
						</Border>

						<!-- Docente -->
						<Border Grid.Column="1"
                                x:Name="docenteButton"
                                Padding="15,12"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="White">
							<Border.StrokeShape>
								<RoundRectangle CornerRadius="12"/>
							</Border.StrokeShape>
							<Border.GestureRecognizers>
								<TapGestureRecognizer Tapped="OnDocenteSelected"/>
							</Border.GestureRecognizers>
							<VerticalStackLayout Spacing="5">
								<Label Text="ðŸ‘¨â€ðŸ«"
                                       FontSize="28"
