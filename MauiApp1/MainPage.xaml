<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F9FAFB">
    
    <!--Resources-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Colores de la paleta -->
            <Color x:Key="AdminPrimary">#1F2937</Color>
            <Color x:Key="AdminSecondary">#374151</Color>
            <Color x:Key="GreenAccent">#10B981</Color>
            <Color x:Key="BackgroundLight">#F9FAFB</Color>
            <Color x:Key="CardBackground">#FFFFFF</Color>
            <Color x:Key="TextPrimary">#1F2937</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>

            <!-- Estilos reutilizables -->
            <Style x:Key="HeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
                <Setter Property="Margin" Value="20,20,20,10"/>
            </Style>

            <Style x:Key="SubHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextColor" Value="{StaticResource TextSecondary}"/>
                <Setter Property="Margin" Value="20,0,20,20"/>
            </Style>

            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
                <Setter Property="Padding" Value="20" />
                <Setter Property="Margin" Value="20,10" />
                <Setter Property="Stroke" Value="LightGray" />
                <Setter Property="StrokeThickness" Value="1" />

                <!-- Esquinas redondeadas -->
                <Setter Property="StrokeShape">
                    <RoundRectangle CornerRadius="15" />
                </Setter>

                <!-- Sombra (reemplazo de HasShadow) -->
                <Setter Property="Shadow">
                    <Shadow
            Opacity="0.3"
            Radius="12"
            Offset="4,4" />
                </Setter>
            </Style>


            <Style x:Key="StatLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="FontFamily" Value="InterExtraBold"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>

            <Style x:Key="StatDescriptionStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="{StaticResource TextSecondary}"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ScrollView>
        <VerticalStackLayout
            Padding="0,0"
            Spacing="25">
            <!-- Header con gradiente -->
            <Grid HeightRequest="270" Margin="0,0,0,20">
                <!--Path con gradiente - forma Fondulada-->
                <Path Stroke="Transparent" StrokeThickness="0" Aspect="Fill">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,0">
                                <!-- Línea superior horizontal -->
                                <LineSegment Point="1,0"/>
                                <!-- Línea vertical derecha -->
                                <LineSegment Point="1,1"/>
                                <!-- Curva cúbica (tu onda original) -->
                                <BezierSegment 
                    Point1="0.5,0.90" 
                    Point2="0.4,0.5" 
                    Point3="0,0.95"/>
                                <!-- Cierra el path -->
                                <LineSegment Point="0,0.01"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                    <Path.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1F2937" Offset="0.0" />
                            <GradientStop Color="#374151" Offset="1.0" />
                        </LinearGradientBrush>
                    </Path.Fill>
                </Path>
                <!-- Contenido del header -->
                <VerticalStackLayout VerticalOptions="Center" 
                                     HorizontalOptions="Center"
                                     Margin="20"
                                     Spacing="15">
                    <!-- Avatar y nombre -->
                    <Border WidthRequest="80"
                            HeightRequest="80"
                            StrokeThickness="0"
                            BackgroundColor="#FFFFFF"
                            Padding="0"
                            HorizontalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="40"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#000000" Offset="0,4" Radius="12" Opacity="0.25"/>
                        </Border.Shadow>
                        <Label Text="CG"
                                FontFamily="InterBold"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="{StaticResource AdminPrimary}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <!--Informacion del Uusario Centrada-->
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Label Text="Carlos González"
                               FontFamily="InterBold"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#FFFFFF"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Director Académico"
                               FontSize="15"
                               TextColor="White"
                               Opacity="0.9"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                        <Border Padding="10,5"
                                BackgroundColor="#6B7280"
                                StrokeThickness="0"
                                HorizontalOptions="Center"
                                Margin="0,5,0,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Label Text="🔧 Administrador"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Grid>
            <Border HeightRequest="8"
                    Margin="0,-30,0,0"
            StrokeThickness="0">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0"/>
                </Border.StrokeShape>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1F2937" Offset="0"/>
                        <GradientStop Color="#374151" Offset="0.5"/>
                        <GradientStop Color="#1F2937" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

            </Border>

            <!-- Accesos Rápidos -->
           

            <Grid Margin="20,0" RowSpacing="15" ColumnSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón Usuarios -->
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnUsuariosClicked"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="10">
                        <Border WidthRequest="50" HeightRequest="50" 
                                Padding="0" 
                                BackgroundColor="#F3F4F6" 
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Label Text="👥" FontSize="24" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Usuarios" FontSize="14" FontAttributes="Bold" 
                               TextColor="{StaticResource TextPrimary}"   HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label Text="Gestionar" FontSize="11" 
                               TextColor="{StaticResource TextSecondary}"   HorizontalOptions="Center" VerticalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Botón Materias -->
                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMateriasClicked"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="10">
                        <Border WidthRequest="50" HeightRequest="50" 
                                Padding="0" 
                                BackgroundColor="#F3F4F6" 
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Label Text="📚" FontSize="24" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Materias" FontSize="14" FontAttributes="Bold" 
                               TextColor="{StaticResource TextPrimary}"   HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label Text="Administrar" FontSize="11" 
                               TextColor="{StaticResource TextSecondary}"   HorizontalOptions="Center" VerticalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Botón Grupos -->
                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGruposClicked"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="10">
                        <Border WidthRequest="50" HeightRequest="50" 
                                Padding="0" 
                                BackgroundColor="#F3F4F6" 
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Label Text="🏫" FontSize="24" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Grupos" FontSize="14" FontAttributes="Bold" 
                               TextColor="{StaticResource TextPrimary}"   HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label Text="Configurar" FontSize="11" 
                               TextColor="{StaticResource TextSecondary}"   HorizontalOptions="Center" VerticalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Botón Reportes -->
                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnReportesClicked"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="10">
                        <Border WidthRequest="50" HeightRequest="50" 
                                Padding="0" 
                                BackgroundColor="#F3F4F6" 
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Label Text="📊" FontSize="24" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Reportes" FontSize="14" FontAttributes="Bold" 
                               TextColor="{StaticResource TextPrimary}"   HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label Text="Generales" FontSize="11" 
                               TextColor="{StaticResource TextSecondary}"   HorizontalOptions="Center" VerticalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Estadísticas del Sistema -->

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout Spacing="10">
                        <Border WidthRequest="40" HeightRequest="40" 
                                Padding="0" 
                                BackgroundColor="#F3F4F6" 
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Label Text="📈" FontSize="20" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Estadísticas en Tiempo Real" 
                                   FontSize="16" FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Label Text="Actualizado hace 2 minutos" 
                                   FontSize="11"
                                   TextColor="{StaticResource TextSecondary}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Grid de estadísticas -->
                    <Grid ColumnSpacing="10" RowSpacing="10" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Alumnos -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                Padding="15" 
                                BackgroundColor="#F9FAFB" 
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 10">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="456" Style="{StaticResource StatLabelStyle}"/>
                                <Label Text="Alumnos" Style="{StaticResource StatDescriptionStyle}"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Docentes -->
                        <Border Grid.Row="0" Grid.Column="1" 
                                Padding="15" 
                                BackgroundColor="#F9FAFB" 
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 10">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="28" Style="{StaticResource StatLabelStyle}"/>
                                <Label Text="Docentes" Style="{StaticResource StatDescriptionStyle}"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Grupos -->
                        <Border Grid.Row="1" Grid.Column="0" 
                                Padding="15" 
                                BackgroundColor="#F9FAFB" 
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 10">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="15" Style="{StaticResource StatLabelStyle}"/>
                                <Label Text="Grupos" Style="{StaticResource StatDescriptionStyle}"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Materias -->
                        <Border Grid.Row="1" Grid.Column="1" 
                                Padding="15" 
                                BackgroundColor="#F9FAFB" 
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 10">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="42" Style="{StaticResource StatLabelStyle}"/>
                                <Label Text="Materias" Style="{StaticResource StatDescriptionStyle}"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Alertas Pendientes -->

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout Spacing="10">
                        <Border WidthRequest="40" HeightRequest="40" 
                                Padding="0" 
                                BackgroundColor="#FEF2F2" 
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Label Text="⚠️" FontSize="20" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                            <Label Text="Alertas que Requieren Atención" 
                                   FontSize="16" FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Label Text="3 alertas activas" 
                                   FontSize="11"
                                   TextColor="{StaticResource TextSecondary}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Lista de alertas -->
                    <StackLayout Spacing="10" Margin="0,10,0,0">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="•" FontSize="20" TextColor="#EF4444" VerticalOptions="Center"/>
                            <Label Text="3 docentes sin grupos asignados"
                                   FontSize="13" TextColor="{StaticResource TextPrimary}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="8">
                            <Label Text="•" FontSize="20" TextColor="#F59E0B" VerticalOptions="Center"/>
                            <Label Text="12 alumnos con baja asistencia (&lt;80%)"
                                   FontSize="13" TextColor="{StaticResource TextPrimary}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="8">
                            <Label Text="•" FontSize="20" TextColor="#F59E0B" VerticalOptions="Center"/>
                            <Label Text="5 solicitudes de cambio pendientes"
                                   FontSize="13" TextColor="{StaticResource TextPrimary}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </StackLayout>

                    <!-- Botón Ver todas -->
                    <Button Text="Ver Todas las Alertas"
                            BackgroundColor="{StaticResource AdminPrimary}"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            Margin="0,10,0,0"
                            Clicked="OnVerAlertasClicked"/>
                </VerticalStackLayout>
            </Border>

            <!-- Periodo Escolar -->

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="10">
                        <Border WidthRequest="40" HeightRequest="40" 
                                Padding="0" 
                                BackgroundColor="#ECFDF5" 
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Label Text="📄" FontSize="20" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                            <Label Text="Periodo Escolar 2026-1" 
                                   FontSize="16" FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Label Text="Enero - Junio 2026" 
                                   FontSize="11"
                                   TextColor="{StaticResource TextSecondary}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <BoxView HeightRequest="1" Color="#E5E7EB" Margin="0,5"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="Semana Actual" 
                                   FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                            <Label Text="5 de 18" 
                                   FontSize="18" FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="Próxima Evaluación" 
                                   FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                            <Label Text="15 de Febrero" 
                                   FontSize="18" FontAttributes="Bold"
                                   TextColor="{StaticResource GreenAccent}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Barra de progreso -->
                    <VerticalStackLayout Spacing="5" Margin="0,10,0,0">
                        <Label Text="Progreso del Periodo" 
                               FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                        <ProgressBar Progress="0.28" 
                                     ProgressColor="{StaticResource GreenAccent}"
                                     HeightRequest="8"/>
                        <Label Text="28% completado" 
                               FontSize="11" TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="End"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Espaciado final -->
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
